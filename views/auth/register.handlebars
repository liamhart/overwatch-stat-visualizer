<div class="background">
    <div class="inputBox center">
        <form method="post"  style="border-right: 1px white;">
            <div class="profile" id="signIcon"></div>

            <label><span class="h3-text input">Email</span></label><br>
            <input type="email" name="email" placeholder="Enter Email Address" required><br>

            <label><span class="h3-text input">Username</span></label><br>
            <input type="text" name="username" placeholder="Enter Username" required><br>

            <label><span class="h3-text input">Password</span></label><br>
            <input type="password" name="password" placeholder="Enter Password" required><br>

            <button type="submit" class="fill text long-boi">Register</button>

        </form>
        <hr>
        <h3 class="text h3-text" id="formOptionOR">OR</h3>
        <a href="/auth/login"><button class="fill text long-boi">Login As An Existing User</button></a>
    </div>
</div>